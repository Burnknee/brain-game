// http://www.ogre3d.org/tikiwiki/tiki-index.php?page=ParticleExampleSun
particle_system Space/Sun
{
  material General/Sun
  particle_width    500
  particle_height   500
  cull_each false
  quota 3
  billboard_type    point
 
  // Emitter
  emitter Ellipsoid
    {
    angle   30
    emission_rate   100
    time_to_live_min    0.05
    time_to_live_max    0.15
    direction   0 1 0
    velocity    1.0
    colour  1.0 1.0 0.5
    width   5
    depth   5
    height  5
  }
 }
 